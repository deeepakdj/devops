pipeline{
    agent any
    environment{
        BRANCH="main"
        GURL="https://github.com/deeepakdj/devops.git"
    }
    stages{
        stage("git checkout")
        {
        when { environment name: 'BRANCH', value: 'main' }
            steps{
                git branch: "${env.BRANCH}", 
                url: "${env.GURL}"
                echo "hello world"
            }
        }  
        stage("build")
        {
            when { environment name: 'BRANCH', value: 'dev' }
            steps{
                echo "Build stage"
                sh "ls -lrt"
            }
        } 
        stage("test")
        {
            when { environment name: 'BRANCH', value: 'main' }
            steps{
                echo "Test stage"
                sh "pwd"
            }
        }     
    }
}