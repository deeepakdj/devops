pipeline{
    agent any
    stages{
        stage("git checkout")
        {
            steps{
                checkout scmGit(branches: [[name: '*/main']],
                extensions: [],
                userRemoteConfigs: [[credentialsId: 'github', 
                url: 'https://github.com/deeepakdj/devops.git']])
            }
        }  
        stage("build")
        {
            steps{
                echo "hello world"
                sh "ls -lrt"
            }
        }      
    }
}