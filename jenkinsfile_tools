pipeline {
    agent any
    tools {
        maven 'maven'
    }
    stages {
        stage('checkout') {
            steps {
                script{
                    checkout scmGit(branches: [[name: '*/main']], 
                    extensions: [], 
                    userRemoteConfigs: [[url: 'https://github.com/deeepakdj/simple-java-maven-app.git']])
                }
            }
        }
        stage('unit testing'){
            steps{
                sh '''
                    cd ./simple-java-maven-app/
                    mvn test
                '''
            }
        }
        stage('Integration Testing'){
            steps{
                dir('./simple-java-maven-app/')
                {
                    sh 'mvn integration-test'
                }
            }
        }
        stage('Load Testing'){
            steps{
                catchError(buildResult:"FAILURE", stageResult:"SUCCESS"){
                    sh '''
                        cd ./simple-java-maven-app/
                    '''
                }
            }
        }
        stage('Deploy'){
            steps{
                script{
                    deploy adapters: [tomcat9(credentialsId:'tomcat',url:'http://3.111.30.174:8080//')],
                                        contextPath: '/java_app',
                                        war:'/simple-java-maven-app/target/java_app.war'
                }
            }
        }
    }
}