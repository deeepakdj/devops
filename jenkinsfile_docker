pipeline{
    agent any
    stages{
        stage('gitcheckout'){
            steps{
                checkout scmGit(
                    branches: [[name: '*/main']], 
                    extensions: [], 
                    userRemoteConfigs: [[url: 'https://github.com/deeepakdj/calculator_app.git']]
                )
            }
        }
        stage('build'){
            steps{
                sh 'docker build -t dockerimage -f Dockerfile-m1 .'
            }
        }
    }
}