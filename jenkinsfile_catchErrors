pipeline{
    agent any
    stages{
        stage("stage-1"){
            steps{
                echo "From stage 1"
            }
        }
        stage("stage-2"){
            steps{
                catchError(stageResult: 'FAILURE', buildStage: 'SUCCESS'){
                    sh 'cat file2.pdf'
                    echo "From stage 2"
                }
            }
        }
        stage("stage-3"){
            steps{
                echo "From stage 3"
            }
        }
    }
}
